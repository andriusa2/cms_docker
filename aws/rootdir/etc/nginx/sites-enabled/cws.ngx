server {
    listen 8081 default_server;
    real_ip_header    X-Forwarded-For;

    location / { alias /var/www/html/; }

    location /jau/ {
        proxy_pass http://127.0.0.1:9000/;
        client_max_body_size 100M;
    }

    location /vyr/ {
        proxy_pass http://127.0.0.1:9001/;
        client_max_body_size 100M;
    }

    location /vyr-eng/ {
        proxy_pass http://127.0.0.1:9002/;
        client_max_body_size 100M;
    }
}
